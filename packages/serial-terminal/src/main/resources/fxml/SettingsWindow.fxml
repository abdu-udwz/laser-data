<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXSlider?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<?import javafx.scene.layout.StackPane?>
<?import com.jfoenix.controls.JFXTextField?>
<HBox maxWidth="580" minHeight="250" minWidth="580" prefHeight="460.0" prefWidth="580" styleClass="settings-layout"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="transmitter.source.ui.controller.SettingsController">

    <children>
        <VBox fx:id="sidePanel" minWidth="160.0" HBox.hgrow="ALWAYS">
            <children>
                <JFXButton fx:id="serialCategoryButton" styleClass="tab-button" alignment="BASELINE_LEFT"
                           text="Serial &amp; Board">
                    <graphic>
                        <MaterialDesignIconView glyphName="USB" size="20"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="commCategoryButton" styleClass="tab-button" alignment="BASELINE_LEFT"
                           text="Communication">
                    <graphic>
                        <MaterialDesignIconView glyphName="ACCESS_POINT_NETWORK" size="20"/>
                    </graphic>
                </JFXButton>
            </children>
            <styleClass>
                <String fx:value="category-bar"/>
                <String fx:value="side-panel"/>
            </styleClass>
        </VBox>

        <VBox fx:id="settingsContentContainer" HBox.hgrow="NEVER">
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" hbarPolicy="NEVER">
                <StackPane fx:id="categoryStack">
                    <VBox fx:id="serialContentPane" maxHeight="Infinity" spacing="10.0" styleClass="content">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <Label styleClass="category-label" text="Serial &amp; Board"/>
                        <VBox spacing="25.0" styleClass="category-content">
                            <children>
                                <JFXComboBox fx:id="baudRateCombo" prefWidth="200.0" promptText="Baud Rate"/>
                                <JFXComboBox fx:id="transmitterPinCombo" layoutX="10.0" layoutY="10.0" prefWidth="200.0"
                                             promptText="Transmitter Pin"/>
                                <JFXComboBox fx:id="receiverPinCombo" layoutX="10.0" layoutY="36.0" prefWidth="200.0"
                                             promptText="Receiver Pin"/>
                                <TextFlow>
                                    <VBox.margin>
                                        <Insets bottom="-20.0"/>
                                    </VBox.margin>
                                    <Text fill="#cf4a00" strokeType="OUTSIDE" strokeWidth="0.0" text="* "/>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                          text="Baud Rate will take effect next time you connect to the board."/>
                                </TextFlow>
                            </children>
                        </VBox>

                        <Label styleClass="category-label" text="Socket"/>
                        <VBox spacing="25.0" styleClass="category-content">
                            <children>
                                <JFXComboBox fx:id="socketIdentityCombo" prefWidth="200.0" promptText="Socket Identity"/>
                                <JFXTextField fx:id="socketHostField" promptText="Socket Host"/>
                                <TextFlow>
                                    <VBox.margin>
                                        <Insets bottom="-20.0"/>
                                    </VBox.margin>
                                    <Text fill="#cf4a00" strokeType="OUTSIDE" strokeWidth="0.0" text="* "/>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                          text="Will take effect next time you connect to the sockets server."/>
                                </TextFlow>
                            </children>
                        </VBox>

                    </VBox>
                    <VBox fx:id="commContentPane" maxHeight="Infinity" spacing="5.0" styleClass="content">
                        <children>
                            <Label layoutX="20.0" layoutY="20.0" styleClass="category-label" text="Protocol"/>
                            <VBox layoutX="20.0" layoutY="50.0" spacing="25.0" styleClass="category-content">
                                <children>
                                    <Label text="Bit Delay" GridPane.rowIndex="4">
                                        <VBox.margin>
                                            <Insets bottom="-10.0"/>
                                        </VBox.margin>
                                    </Label>
                                    <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.rowIndex="5">
                                        <children>
                                            <JFXSlider fx:id="bitDelaySlider" prefWidth="200.0" showTickLabels="true"
                                                       showTickMarks="true" snapToTicks="true" HBox.hgrow="ALWAYS"/>
                                            <Label fx:id="bitDelayLabel" maxWidth="-Infinity" prefWidth="60.0"
                                                   text="10 ms"/>
                                        </children>
                                    </HBox>
                                    <JFXComboBox fx:id="determinerCombo" layoutX="30.0" layoutY="213.0"
                                                 prefWidth="200.0"
                                                 promptText="Determiner"/>
                                    <JFXComboBox fx:id="encodingCombo" layoutX="30.0" layoutY="274.0" prefWidth="200.0"
                                                 promptText="Encoding"/>
                                    <TextFlow>
                                        <children>
                                            <Text fill="#cf4a00" strokeType="OUTSIDE" strokeWidth="0.0" text="* "/>
                                            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                                  text="Protocol settings must be the same on both the devices."/>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="-20.0"/>
                                        </VBox.margin>
                                    </TextFlow>
                                </children>
                            </VBox>
                            <Label layoutX="20.0" layoutY="20.0" styleClass="category-label" text="Sending"/>
                            <VBox layoutX="20.0" layoutY="46.0" spacing="10.0" styleClass="category-content">
                                <children>
                                    <Label text="Packet Size"/>
                                    <HBox spacing="20.0">
                                        <children>
                                            <JFXSlider fx:id="packetSizeSlider" prefWidth="200.0" showTickLabels="true"
                                                       showTickMarks="true" snapToTicks="true" HBox.hgrow="ALWAYS"/>
                                            <Label fx:id="packetSizeLabel" maxWidth="-Infinity" prefWidth="60.0"
                                                   text="48 Bytes"/>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="-15.0"/>
                                        </VBox.margin>
                                    </HBox>
                                </children>
                            </VBox>
                            <Label layoutX="20.0" layoutY="305.0" styleClass="category-label" text="Receiving"/>
                            <VBox styleClass="category-content">
                                <children>
                                    <GridPane hgap="5.0" vgap="10.0">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                        </columnConstraints>
                                        <rowConstraints>
                                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                            <RowConstraints minHeight="10.0" valignment="BOTTOM" vgrow="SOMETIMES"/>
                                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                            <RowConstraints minHeight="10.0" valignment="BOTTOM" vgrow="SOMETIMES"/>
                                        </rowConstraints>
                                        <children>
                                            <Label text="High Light Value" GridPane.rowIndex="0"/>
                                            <HBox alignment="TOP_CENTER" spacing="20.0" GridPane.rowIndex="1">
                                                <children>
                                                    <JFXSlider fx:id="highValueSlider" prefWidth="200.0"
                                                               showTickLabels="true"
                                                               showTickMarks="true" HBox.hgrow="ALWAYS"/>
                                                    <Label fx:id="highValueLabel" maxWidth="-Infinity" prefWidth="60.0"
                                                           text="Label"/>
                                                </children>
                                            </HBox>
                                            <Label text="Byte Correction" GridPane.rowIndex="2"/>
                                            <HBox alignment="TOP_CENTER" spacing="20.0" GridPane.columnSpan="2147483647"
                                                  GridPane.rowIndex="3">
                                                <children>
                                                    <JFXSlider fx:id="byteCorrectionSlider" prefWidth="200.0"
                                                               showTickLabels="true" showTickMarks="true"
                                                               snapToTicks="true"
                                                               HBox.hgrow="ALWAYS"/>
                                                    <Label fx:id="byteCorrectionLabel" maxWidth="-Infinity"
                                                           prefWidth="60.0"
                                                           text="Label"/>
                                                </children>
                                            </HBox>
                                        </children>
                                    </GridPane>
                                    <TextFlow>
                                        <children>
                                            <Text fill="#cf4a00" strokeType="OUTSIDE" strokeWidth="0.0" text="* "/>
                                            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                                  text="Byte correction may be adjusted automatically after changing bit delay."/>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="-20.0"/>
                                        </VBox.margin>
                                    </TextFlow>
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>
                </StackPane>
            </ScrollPane>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" styleClass="footer">
                <children>
                    <JFXButton fx:id="cancelButton" text="Cancel"/>
                    <JFXButton fx:id="okButton" text="OK"/>
                </children>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </HBox>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../stylesheet/template.css"/>
        <URL value="@../stylesheet/theme.css"/>
    </stylesheets>
</HBox>

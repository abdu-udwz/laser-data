<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.String?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="detailsPane" maxHeight="300.0" styleClass="details-pane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
      <content>
         <VBox alignment="TOP_RIGHT" spacing="10.0" styleClass="details-container">
            <children>
               <TextArea fx:id="detailsArea" editable="false">
                  <styleClass>
                     <String fx:value="details-area" />
                     <String fx:value="note-area" />
                  </styleClass>
               </TextArea>
               <JFXButton fx:id="copyDetailsButton" text="%ALERT_COPY_DETAILS" />
            </children>
         </VBox>
      </content>
</TitledPane>
